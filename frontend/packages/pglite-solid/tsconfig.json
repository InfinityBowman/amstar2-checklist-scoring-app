{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["solid-js"],
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
